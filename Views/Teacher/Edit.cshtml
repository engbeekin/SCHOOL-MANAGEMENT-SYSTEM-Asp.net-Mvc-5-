@model SchoolMangement.Models.techear

@{
    ViewBag.Title = "Edit";
}
<h2 class="text-capitalize text-primary text-center" style="margin-top:30px"> Edit Teacher Details</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="container">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label style="margin-bottom:10px; margin-left:20px;font-weight:bolder">Teacher Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="margin-bottom:10px; margin-left:20px;font-weight:bolder">Course Name</label>
            <div class="col-md-10">
                @Html.DropDownList("coursename", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.coursename, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
