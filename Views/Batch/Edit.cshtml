@model SchoolMangement.Models.batch

@{
    ViewBag.Title = "Edit";
}

    <h2 class="text-capitalize text-primary text-center" style="margin-top:30px"> Edit Batch Details</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="container">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label style="margin-bottom:10px; margin-left:20px;font-weight:bolder">Batch Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.batch1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.batch1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="margin-bottom:10px; margin-left:20px;font-weight:bolder">Year</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.year, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.year, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
